	<bean id="product-2" class="com.spring.Product">
		<constructor-arg name="id" value="12" />
		<constructor-arg name="name" value="refrigerator" />
		<constructor-arg name="price" value="120000" />
	</bean>


	<bean id="address" class="com.spring.Address" scope="singleton">
		<property name="address1">
			<value>SBR Horizon, Bengaluru</value>
		</property>

	</bean>

	<bean id="deliveryAddress" class="com.spring.DeliveryAddress">
		<property name="id" value="12345" />
		<property name="address" ref="address">
		</property>
		<property name="cart" ref="cart">
		</property>
	</bean>

	<bean id="cart" class="com.spring.Cart" autowire="constructor">
		<property name="id" value="101" />
		<property name="name" value="Avacado" />
		<property name="products">
			<list>
				<ref bean="product-2" />
			</list>

		</property>
	</bean>


	<bean id="dbConnection" class="com.spring.DBConnection"
		factory-method="getInstanace">
	</bean>

	<bean id="connection-1" class="java.sql.Connection"
		factory-bean="dbConnection" factory-method="getConnection"></bean>


</beans>
</beans>

  

